<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="14dp"
    android:layout_marginLeft="14dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/productname2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Product name"
            android:textColor="@color/beige"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/productprice2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/darkgrey"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productquantity2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textColor="@color/darkgrey"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/changequant"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Change quantity"
            android:textColor="@color/darkgrey"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/updatequant_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button"
            android:text="Update Quantity"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <Button
            android:id="@+id/deleteproduct_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:padding="1dp"
            android:text="Delete"
            android:textColor="@color/orange"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>